<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DocumentService</servlet-name>
        <servlet-class>org.ugr.rtpstat.backend.DocumentService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadPDF</servlet-name>
        <servlet-class>org.ugr.rtpstat.backend.DownloadPDF</servlet-class>
        <init-param>
            <param-name>token</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DocumentStatusService</servlet-name>
        <servlet-class>org.ugr.rtpstat.backend.DocumentStatusService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocumentService</servlet-name>
        <url-pattern>/DocumentService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadPDF</servlet-name>
        <url-pattern>/DownloadPDF</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocumentStatusService</servlet-name>
        <url-pattern>/DocumentStatusService</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
